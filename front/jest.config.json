{
    "jest": {
      "bail": 1,
      "verbose": true,
      "collectCoverageFrom": [
        "src/**/*js",
        "!src/reportWebVitals.js",
        "!src/index.js"
      ],
      "setupFiles": ["<rootDir>/.jest/setEnvVars.js"],
      "transform": {
        "^.+\\.js$": "babel-jest"
      },
      "moduleFileExtensions": ["js", "jsx", "json", "node"],
      "transformIgnorePatterns": ["node_modules/(?!(your-esm-package)/)"]
    }
  }
  